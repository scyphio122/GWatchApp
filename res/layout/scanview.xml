<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:baselineAligned="true" android:background="#ff0a1eff" android:weightSum="1" >
    <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/bleScanList" android:layout_weight="0.99" android:choiceMode="singleChoice"
            android:clickable="true"/>
    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect"
                android:id="@+id/connectButton" android:layout_gravity="right"
                android:layout_marginLeft="486dp"
                android:layout_alignParentTop="true" android:layout_alignParentEnd="true" android:enabled="false"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan"
                android:id="@+id/scanButton" android:layout_alignBaseline="@+id/connectButton"
                android:layout_alignBottom="@+id/connectButton" android:layout_alignParentStart="true"/>
    </RelativeLayout>
</LinearLayout>

